<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView_searchResult"
        android:background="@color/colorBackground"
        android:layout_margin="16dp"
        app:cardElevation="2dp"
        app:contentPaddingTop="4dp"
        app:contentPaddingBottom="0dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:id="@+id/tv_search_item_id"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="编号"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textSize="14sp"
                        android:id="@+id/tv_search_item_type"
                        android:text="类型"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textSize="14sp"
                        android:id="@+id/tv_search_item_name"
                        android:text="名称"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textSize="14sp"
                        android:id="@+id/tv_search_item_address"
                        android:text="地址"/>
                </LinearLayout>
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="0dp"
                    android:id="@+id/iv_search_item_detail"
                    android:src="@drawable/ic_detail" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_search_item_MR"
                    android:background="@color/colorBackground"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="管养记录"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"/>
                <android.support.v7.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_search_item_Event"
                    android:background="@color/colorBackground"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="事件记录"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"/>
                <android.support.v7.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_search_item_IR"
                    android:background="@color/colorBackground"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="巡查记录"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

