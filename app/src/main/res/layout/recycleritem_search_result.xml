<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/cardView_searchResult"
        android:background="@color/colorBackground"
        android:layout_margin="16dp"
        app:cardElevation="2dp"
        app:contentPaddingTop="4dp"
        app:contentPaddingBottom="0dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/recyclerItem_textView_ID"
                        android:text="编号"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/recyclerItem_textView_classType"
                        android:text="类型"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/recyclerItem_textView_name"
                        android:text="名称"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/recyclerItem_textView_address"
                        android:text="地址"/>
                </LinearLayout>
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="2"
                    android:id="@+id/recyclerItem_image_map"
                    android:src="@drawable/ic_card_map" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/recyclerItem_btn_toMaintainRecord"
                    android:background="@color/colorBackground"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="管养记录"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"/>
                <android.support.v7.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/recyclerItem_btn_toEvent"
                    android:background="@color/colorBackground"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="大事记"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"/>
                <android.support.v7.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/recyclerItem_btn_toInspectRecord"
                    android:background="@color/colorBackground"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="巡查记录"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

